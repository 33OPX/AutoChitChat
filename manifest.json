{
  "manifest_version": 3,
  "name": "ChitChat Auto-Skipper",
  "version": "1.0",
  "description": "Automatically skips unwanted chats on ChitChat.gg.",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["https://app.chitchat.gg/chat/new/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "48": "icon.png"
  }
}
